<Window x:Class="AplicacionconVariasPaginas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicacionconVariasPaginas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="boton1" Content="Login" Margin="5,5,5,5" Click="boton1_Click"/>
            <Button x:Name="boton2" Content="Acerca De" Margin="5,5,5,5" Click="boton2_Click"/>
        </StackPanel>
        <Frame x:Name="frame1" Grid.Row="1"/>
    </Grid>
</Window>
